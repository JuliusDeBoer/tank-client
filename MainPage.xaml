<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tank_client.MainPage"
             Title="00">

    <AbsoluteLayout
        Padding="0,0"  
        VerticalOptions="Center">

        <AbsoluteLayout.GestureRecognizers>
            <PointerGestureRecognizer
                                  PointerMoved="MoveBattleground" />
        </AbsoluteLayout.GestureRecognizers>


            <ImageButton
                x:Name="battleground"
                Source="rei.jpg"
                SemanticProperties.Description="Rei from evongalion as a fast food employee!"
                HorizontalOptions="Center"
                WidthRequest="2000"
                Pressed="BattlegroundPressed"
                Released="BattlegroundReleased" />

        <ScrollView
            HorizontalScrollBarVisibility="Always"
            AbsoluteLayout.LayoutBounds="3, 0">
            
            <Label
            x:Name="logView"
            Text="AAAAAH"
            HeightRequest="200"
            />
        </ScrollView>

    </AbsoluteLayout>

</ContentPage>
