            Text="Start"
            Clicked="Start"
            AbsoluteLayout.LayoutBounds="0.5,0.8"
            WidthRequest="200"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>
</ContentPage>